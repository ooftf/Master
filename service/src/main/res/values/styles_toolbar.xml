<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation" tools:targetApi="lollipop">2dp</item>
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="overlapAnchor">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="actionMenuTextColor">@color/colorPrimaryContrast</item>
        <item name="actionOverflowMenuStyle">@style/ThemeOverlay.Toolbar.PopupMenu</item>
        <!--设置背景颜色的-->
        <!--<item name="android:colorBackground">#223344</item>-->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionBarSize">@dimen/layout_appbar_height</item>
        <item name="titleTextColor">@color/colorPrimaryContrast</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <style name="ToolbarStyle.Back">
        <item name="navigationIcon">@drawable/vector_arrow_left</item>
    </style>
    <style name="AppBarLayout" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorControlNormal">@color/colorPrimaryContrast</item>
    </style>

    <style name="ThemeOverlay.Toolbar.PopupMenu" parent="ThemeOverlay.AppCompat.Light">
        <item name="overlapAnchor">false</item>
        <item name="android:textColor">@color/black</item>
        <!--设置背景颜色的-->
        <!--<item name="android:colorBackground">#223344</item>-->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorPrimaryContrast</item>
    </style>
</resources>
